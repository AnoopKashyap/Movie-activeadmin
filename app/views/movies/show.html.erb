<body style="background-color:rgb(32, 29, 29)">
<button type="button" class="btn btn-warning"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></button>

<div class="show">
    <h1>Showing the selected Movie</h1>

    <p>
      Movie Name: <%= @movie.name %>
    </p>

    <p>
      Release Date: <%= @movie.release_date %>
    </p>

    <p>
      Star Cast: <%= @star.hero %> , <%= @star.heroin %> , <%= @star.director %> , <%= @star.producer %> , <%= @star.supporting_cast %>
    <p>
      Short Description: <%= @movie.short_description %>
    </p>

    <p>
      Description: <%= @movie.description %>
    </p>

    <p>
      Genre: <%= @movie.genre %>
    </p>

    <p>
      Recommended: <%= @movie.recommended? %>
    </p>

    <p>
      Age Bar: <%= @movie.age_bar %>
    </p>

    <p>
      Wallpaper: <%= image_tag @movie.wallpaper.url(:thumb)%>
    </p>

    <p>
    <%= form_tag("/comments", method: "post") do %>
      <%= hidden_field(:current_user, :id) %>
      <%= hidden_field(:movie, :id) %>
      <%= label_tag(:review, "Review:") %>
      <%= text_field_tag(:review) %>
      <%= submit_tag("Submit") %>
    <% end %>
    <br/><a href="/movies">Back</a>

    </p>
</div>
</body>

